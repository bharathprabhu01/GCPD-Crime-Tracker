<% @current_assignments = @officer.assignments.current.chronological %>
<% @past_assignments = @officer.assignments.past.chronological %>

<% if @current_assignments.empty? %>
    <h5> No Current Investigations </h5>
<% else %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">My Current Investigations</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Started</th>
        </thead>
        <% for assignment in @current_assignments %>
          <tr>
            <td>
              <%= link_to assignment.investigation.title, investigation_path(assignment.investigation) %>
            </td>
            <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end%>

<% if @past_assignments.empty? %>
    <h5> No Past Investigations </h5>
<% else %>
  <div class="card grey lighten-3">
    <div class="card-content">
      <span class="card-title">My Past Investigations</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Started</th>
        </thead>
        <% for assignment in @past_assignments %>
          <tr>
            <td>
              <%= link_to assignment.investigation.title, investigation_path(assignment.investigation) %>
            </td>
            <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end%>