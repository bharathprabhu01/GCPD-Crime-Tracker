<% @current_assignments = @officer.assignments.current.chronological %>

<% if @current_assignments.empty? %>
    <h5> No Investigations </h5>
<% else %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">My Investigations</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Started</th>
          <th>Solved?</th>
        </thead>
        <% for assignment in @current_assignments %>
          <tr>
            <td>
              <% if can? :terminate, Assignment %>
                <%= link_to(terminate_assignment_path(assignment, from: "officer"), class: 'remove', method: :patch) do %>
                  x&nbsp;&nbsp;
                <% end %>
              <% end %>
              &nbsp;<%= link_to assignment.investigation.title, investigation_path(assignment.investigation) %>
            </td>
            <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
            <td><%= assignment.investigation.solved? %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end%>